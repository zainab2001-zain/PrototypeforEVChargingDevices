<Window x:Class="ProtypeForEV_Charging.ChargingDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChargingDetails" Height="500" Width="800">

    <Grid Background="#DDFFDC">
        <TextBlock Text="EV CHARGING STATION" FontSize="30" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        <Label Content="Select your Vehicle" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,50,0,20"/>

        <!-- StackPanel to arrange radio buttons and labels horizontally -->
        <!-- Car Radio Button -->
        <StackPanel Margin="150,100,0,0">
            <RadioButton>
                <Image Source="D:\my projects\ProtypeForEV Charging\car.png" Width="100" Height="100" Stretch="Uniform" />
            </RadioButton>
        </StackPanel>

        <!-- Bike Radio Button -->
        <StackPanel Margin="10">
            <RadioButton>
                <Image Source="D:\my projects\ProtypeForEV Charging\bike.png" Width="100" Height="100" Stretch="Uniform" />
            </RadioButton>
        </StackPanel>

        <!-- EV Scooter Radio Button -->
        <StackPanel Margin="10">
            <RadioButton>
                <Image Source="D:\my projects\ProtypeForEV Charging\evscooter.png" Width="100" Height="100" Stretch="Uniform" />
            </RadioButton>
        </StackPanel>


    </Grid>
</Window>
