<Window x:Class="ProtypeForEV_Charging.PINConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PINConfirmationWindow" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Enter your PIN:" FontSize="16" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="PINTextBox" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Width="120" Height="30" Margin="0,-60,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Confirm" FontSize="16" FontWeight="Bold" Width="100" Height="30" Background="#4682B4" Foreground="White" Margin="10,0" Click="Confirm_Click"/>
            <Button Content="Cancel" FontSize="16" FontWeight="Bold" Width="100" Height="30" Background="#FF6347" Foreground="White" Margin="10,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
